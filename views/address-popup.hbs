<div class="address-popup">
    <div class="address-header">
        <div class="address">{{address}}</div>
        <div class="popup-close-btn">
            <img src="src/icons/x.png" alt="x" id="address-close"/>
        </div>
    </div>

    {{#if hasFeedbacks}}
        <div class="empty">Отзывов пока нет</div>
    {{else}}
    {{#each feedbacks}}
        <div class="feedback">
            <div class="feedback-header">
                <div class="user-name">{{userName}}</div>
                <div class="place">{{place}}</div>
                <div class="date">{{date}}</div>
            </div>
            <div class="feedback-msg">{{message}}</div>
        </div>
    {{/each}}
    {{/if}}

    <div class="new-feedback">
        <h3>ВАШ ОТЗЫВ</h3>
        <form>
            <input type="text" placeholder="Ваше имя"/>
            <input type="text" placeholder="Укажите место"/>
            <input type="textarea" placeholder="Поделитесь впечатлениями"/>
            <button class="add-feedback">Добавить</button>
        </form>
    </div>
</div>
